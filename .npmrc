# NPM Configuration for Shunsuke Platform Monorepo

# Enable workspaces
workspaces=true

# Hoist shared dependencies to root
hoist=true
hoist-pattern[]=*

# Performance optimizations
prefer-offline=true
cache-min=3600

# Security
audit-level=moderate

# Logging
loglevel=warn

# Save exact versions
save-exact=true

# Engine strict mode
engine-strict=true

# Workspace configurations
workspace-prefix=@shunsuke/