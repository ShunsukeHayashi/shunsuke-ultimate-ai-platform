# Course Generator Service Environment Variables

# Server Configuration
PORT=3002
NODE_ENV=development

# CORS Settings
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here

# Audio Service Providers (Optional)
# GOOGLE_TTS_API_KEY=your_google_tts_key
# AZURE_SPEECH_KEY=your_azure_speech_key
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# OPENAI_API_KEY=your_openai_api_key

# Redis Configuration (Optional)
# REDIS_URL=redis://localhost:6379

# Service Limits
MAX_CRAWL_DEPTH=3
MAX_PAGES_PER_DOMAIN=50
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60000

# Storage Paths
AUDIO_CACHE_DIR=./audio_cache
EXPORT_DIR=./exports

# CDN and Storage Configuration
# Storage provider: local, s3, or cloudflare
STORAGE_PROVIDER=local

# Local storage (default)
STORAGE_LOCAL_PATH=./uploads
STORAGE_PUBLIC_URL=http://localhost:3002/uploads

# AWS S3 Configuration (optional)
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_CDN_URL=https://d1234567890.cloudfront.net

# Cloudflare R2 Configuration (optional)
# CLOUDFLARE_ACCOUNT_ID=your-account-id
# CLOUDFLARE_ACCESS_KEY_ID=your-access-key
# CLOUDFLARE_SECRET_ACCESS_KEY=your-secret-key
# CLOUDFLARE_BUCKET_NAME=your-bucket-name
# CLOUDFLARE_PUBLIC_URL=https://your-domain.r2.dev

# Logging
LOG_LEVEL=info